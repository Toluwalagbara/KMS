<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    
    <id>theme</id>
    <formats>
        <format>jar</format>
    </formats>
    
    <includeBaseDirectory>false</includeBaseDirectory>
    
    <fileSets>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-atlantis-blue</directory>
            <outputDirectory>/META-INF/resources/primefaces-atlantis-blue</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-atlantis-cyan</directory>
            <outputDirectory>/META-INF/resources/primefaces-atlantis-cyan</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-atlantis-green</directory>
            <outputDirectory>/META-INF/resources/primefaces-atlantis-green</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-atlantis-orange</directory>
            <outputDirectory>/META-INF/resources/primefaces-atlantis-orange</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-atlantis-pink</directory>
            <outputDirectory>/META-INF/resources/primefaces-atlantis-pink</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-atlantis-purple</directory>
            <outputDirectory>/META-INF/resources/primefaces-atlantis-purple</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-atlantis-steel</directory>
            <outputDirectory>/META-INF/resources/primefaces-atlantis-steel</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-atlantis-turquoise</directory>
            <outputDirectory>/META-INF/resources/primefaces-atlantis-turquoise</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/WEB-INF</directory>
            <outputDirectory>/META-INF/</outputDirectory>
            <includes>
                <include>faces-config.xml</include>
                <include>primefaces-atlantis.taglib.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/target/classes</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>org/primefaces/atlantis/component/*</include>
            </includes>
        </fileSet>
    </fileSets>
    
</assembly>